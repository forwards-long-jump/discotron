{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "plugins": [
        "jsdoc"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended"
    ],
    "globals": {
        "discotron": "readonly"
    },
    "rules": {
        "eqeqeq": "error",
        "semi": "error",
        "curly": "error",
        "brace-style": "error",
        "jsdoc/newline-after-description": "off",
        "space-infix-ops": "error",
        "no-multi-spaces": "error",
        "no-var": "error",
        "no-unused-vars": "warn",
        "keyword-spacing": "error",
        "comma-spacing": "error",
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1,
                "VariableDeclarator": 1
            }
        ]
    }
}